<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:alpha=".9"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="BMI"
                android:textColor="?attr/colorOnPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="?attr/colorOnPrimary"
                android:paddingStart="40dp"
                android:paddingEnd="20dp"
                android:text="Below 18.5\t\t\t\t\t\t\t\t\t\t\t\tUNDERWEIGHT"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="41dp"
                android:textColor="?attr/colorOnPrimary"
                android:paddingEnd="20dp"
                android:text="18.5 - 24.9\t\t\t\t\t\t\t\t\t\t\t\t\t\tNORMAL"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="?attr/colorOnPrimary"
                android:paddingStart="41dp"
                android:paddingEnd="20dp"
                android:text="25.0 - 29.9\t\t\t\t\t\t\t\t\t\t\t\tOVERWEIGHT"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:padding="10dp"
                android:paddingStart="40dp"
                android:layout_marginBottom="15dp"
                android:paddingEnd="20dp"
                android:text="Above 30.0\t\t\t\t\t\t\t\t\t\t\t\t\t\tOBESE"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>