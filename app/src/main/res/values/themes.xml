<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymHub_FITNESSxHABITTRACKER" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/light_orange</item>
        <item name="colorOnSecondary">#EEEEEE</item>
        <!-- Customize your theme here. -->
        <item name="android:logo">@mipmap/logo2</item>
        <!-- Customize your statusbar here. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_m</item>
    </style>
    <style name="CustomChipsStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>
    <style name="CustomChipsStyle.1" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
    </style>
    <style name="CustomChipsStyle.2" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color2</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>
    <style name="CustomChipsStyle.3" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color2</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>
</resources>